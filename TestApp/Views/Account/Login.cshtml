    @*prevent go back on logout*@
    <style>
        body {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        .body-content {
            padding-left: 15px;
            padding-right: 15px;
        }


        .login-container {
            width: 100vw;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-image: linear-gradient(to right, #292929, #26292b, #1f292a, #1d2924, #23271b);
        }

        .form-wrapper {
            width: 60%;
            margin-top: -100px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .input-size {
            height: 70px;
            width: 570px;
            margin: 6px;
            padding-left:5px;
        }

        .input-size::placeholder {
            padding-left:5px;
        }
            .title-color {
            font-family: 'Courgette', cursive;
            color: white;
            font-size: 3rem;
        }

        .section-form {
            width: 100%;
        }

        .form-grab {
            display:flex;
            justify-content:center;
            align-items:center;
           flex-direction:column;
            color: white;
        }

        .ttile {
            width: 100%;
            text-align: center;
            padding: 45px;
        }

        .text-inp {
            font-size: 1.08rem;
            outline: none;
            font-family: 'PT Mono', monospace;
        }

            .text-inp::placeholder {
            }

        .fosi {
            font-size: 1.2rem;
            width: 570px;
            background-color: rgb(21, 104, 237);
            border-color: rgb(21, 104, 237);
            padding: 9px;
            margin: 15px;
            color: white;
        }

        .loginform{
            display:flex;
            justify-content: center;
        }
        .error-space {
            display: flex;
            flex-direction: column;
            margin-bottom: 9px;
        }
    </style>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Courgette&family=PT+Mono&display=swap" rel="stylesheet">
    <script type="text/javascript">
        //function preventback() { window.history.forward(); }
        //setTimeout("preventback()", 0);
