</head>


<div class="login-container">
    <div class="form-wrapper">
        <section class="ttile">  <h1 class="title-color">Transport Log</h1></section>
        @*d-flex justify-content-center*@
        <section class="section-form loginform" id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = " form-grab", role = "form", @style = "" }))//form-horizontal row
            {

                @Html.AntiForgeryToken()


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="form-group">
                        @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })*@
                        <div class=" error-space">
                            @*col-md-10*@
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Enter your email...", @class = "input-size text-inp" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", @style = "margin-left: 18px;" })
                        </div>
                    </div>
                </div>

                <div class="">
                    @*//row*@
                    <div class="">
                        @*//form-group mt-4*@
                        @*@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
                        <div class="error-space">
                            @*col-md-10*@
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Enter your password...", @class = " input-size text-inp" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = " text-danger", @style = "margin-left: 18px;" })
                        </div>
                    </div>
                </div>

                @*<div class="row">
                    <div class="form-group">
                        <div style="margin-right:380px;" class="col-md-offset-2 col-md-10">
                            <div class="checkbox mt-1">
                                @Html.CheckBoxFor(m => m.RememberMe, new { @style = "color:white;" })
                                @Html.LabelFor(m => m.RememberMe, new { @style = "color:white; font-family: 'PT Mono', monospace;" })
                            </div>
                        </div>
                    </div>
                </div>*@

        <div class="">
            @*//row*@
            <div class="">
                @*//form-group*@
                <div class="">
                    @*//col-md-offset-2 col-md-10 mt-3*@
                    <input type="submit" value="Log In" class="fosi" />
                </div>
            </div>
        </div>
            }
        </section>
    </div>
</div>





